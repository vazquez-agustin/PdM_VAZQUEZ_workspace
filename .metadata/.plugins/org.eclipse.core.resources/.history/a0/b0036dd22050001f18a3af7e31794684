#ifndef API_INC_API_UART_H_
#define API_INC_API_UART_H_

/* Exported constants --------------------------------------------------------*/

#define USARTx USART6
typedef bool bool_t;		//1 byte

/* Function prototypes -----------------------------------------------*/

bool_t uartInit();
