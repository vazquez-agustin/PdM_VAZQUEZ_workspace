/* Includes ------------------------------------------------------------------*/

#include "API_display_HAL.h"

/* HAL API Code --------------------------------------------------------------*/

void API_display_HAL_Delay (uint32_t delay) {

	/**
	  * @brief This function provides minimum delay (in milliseconds) based
	  *        on variable incremented.
	  * @note In the default implementation , SysTick timer is the source of time base.
	  *       It is used to generate interrupts at regular time intervals where uwTick
	  *       is incremented.
	  * @note This function is declared as __weak to be overwritten in case of other
	  *       implementations in user file.
	  * @param Delay specifies the delay time length, in milliseconds.
	  * @retval None
	  */
	HAL_Delay(delay);

}

void API_display_HAL_I2C_Write () {  //REVISAR PARÁMETROS DE FUNCIÓN

	// Para enviar comandos y datos desde el STM32 (maestro) al LCD (esclavo).
	HAL_StatusTypeDef HAL_I2C_Master_Transmit(I2C_HandleTypeDef *hi2c, uint16_t DevAddress, uint8_t *pData, uint16_t Size, uint32_t Timeout); //Revisar parámetros

}
